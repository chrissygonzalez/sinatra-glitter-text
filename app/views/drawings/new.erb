<h1 class="text-center">Make a new Glitter Text</h1>
<form method="post" action="/drawings">
    <div>
        <label for="title">Title</label>
        <input type="text"name="title">
    </div>
    <div>
        <label for="content">Content</label>
        <input type="text" name="content">
    </div>
    <div>
        <h4>Theme</h4>
        <% Theme.all.each do |theme| %>
            <input type="radio" name="theme" id="theme_<%= theme.id %>" value="<%= theme.name %>">
            <label for="theme_<%= theme.id %>"><%= theme.name %></label>
        <% end %>
    </div>
    <input type="submit">
</form>