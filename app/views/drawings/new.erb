<h1>Make a new Glitter Text</h1>
<form method="post" action="/drawings">
    <div>
        <h4>Background Color</h4>
        <input type="radio" name="background_color" id="bkgd_color_1" value="pink">
        <label for="bkgd_color_1">Pink</label>
        <input type="radio" name="background_color" id="bkgd_color_1" value="red">
        <label for="bkgd_color_2">Red</label>
        <input type="radio" name="background_color" id="bkgd_color_1" value="green">
        <label for="bkgd_color_3">Green</label>
        <input type="radio" name="background_color" id="bkgd_color_1" value="cyan">
        <label for="bkgd_color_4">Cyan</label>
    </div>
    <div>
        <h4>Background Effect</h4>
        <input type="radio" name="background_effect" id="bkgd_effect_1" value="sparkles">
        <label for="bkgd_effect_1">Sparkles</label>
        <input type="radio" name="background_effect" id="bkgd_effect_2" value="glitter.png">
        <label for="bkgd_effect_2">Glitter</label>
        <input type="radio" name="background_effect" id="bkgd_effect_3" value="confetti">
        <label for="bkgd_effect_3">Confetti</label>
        <input type="radio" name="background_effect" id="bkgd_effect_4" value="none">
        <label for="bkgd_effect_4">None</label>
    </div>
    <div>
        <h4>Text Color</h4>
        <input type="radio" name="text_color" id="text_color_1" value="black">
        <label for="text_color_1">Black</label>
        <input type="radio" name="text_color" id="text_color_2" value="white">
        <label for="text_color_2">White</label>
    </div>
    <div>
        <h4>Text Outline Color</h4>
        <input type="radio" name="outline_color" id="outline_color_1" value="yellow">
        <label for="outline_color_1">Yellow</label>
        <input type="radio" name="outline_color" id="outline_color_2" value="orange">
        <label for="outline_color_2">Orange</label>
    </div>
    <div>
        <h4>Text Outline Width</h4>
        <input type="radio" name="outline_width" id="outline_width_1" value="0">
        <label for="outline_width_1">0</label>
        <input type="radio" name="outline_width" id="outline_width_2" value="1">
        <label for="outline_width_2">1</label>
        <input type="radio" name="outline_width" id="outline_width_3" value="2">
        <label for="outline_width_3">2</label>
    </div>
    <div>
        <label for="content">Content</label>
        <input type="text" name="content">
    </div>
    <div>
        <label for="title">Title</label>
        <input type="text"name="title">
    </div>
    <input type="submit">
</form>