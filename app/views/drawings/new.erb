    <h2 class="nav-back-text float-left mt-8"><a href="/">&#8656; Back</a></h2>
    <div class="float-right">
        <p class="display-inline-block">Hello, <%= Helpers.current_user(session).username %>!</p>
        <a href="/logout" class="button display-inline-block">Log out</a>
    </div>
</nav>

<div class="flex-container">
    <div id="flash"></div>
    <div class="home-button-box">
        <h1 class="text-center">Make a new Glitter Text</h1>
        <form method="post" action="/drawings">
            <div class="mt-20">
                <label for="title">Title</label>
                <input type="text"name="title" maxlength="20">
            </div>
            <div class="mt-20">
                <label for="content">Content</label>
                <input type="text" name="content" maxlength="35">
            </div>
            <div class="mt-20 mb-20">
                <p class="label">Theme</p>
                <% Theme.all.each do |theme| %>
                    <input type="radio" name="theme" id="theme_<%= theme.id %>" value="<%= theme.name %>">
                    <label class="mr-15" for="theme_<%= theme.id %>"><%= theme.name %></label>
                <% end %>
            </div>
            <input class="button margin-center" type="submit">
        </form>
    </div>
</div>